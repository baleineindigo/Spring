package com.encore.spring.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.servlet.ModelAndView;

import com.encore.spring.domain.Item;
import com.encore.spring.model.ItemService;
import com.encore.spring.model.Impl.ItemServiceImpl;

@Controller
public class FruitsController{
	@Autowired
	private ItemService itemService;
	
	@RequestMapping(value="index.do", method=RequestMethod.POST)
	public ModelAndView getItems(Integer itemNumbre) {//폼에 입력된 값을 자동으로 바인딩 해서 넘어옴
		Item vo = itemService.getItem(); // 폼의 name과 필드명이 일치해야함
		return new ModelAndView("itemList","list",vo);	
	}
	
	@RequestMapping("index.do")
	public ModelAndView getItemList() {//폼에 입력된 값을 자동으로 바인딩 해서 넘어옴
		itemService.getItemList(); // 폼의 name과 필드명이 일치해야함
		return new ModelAndView("itemList","list",);	
	}
}
