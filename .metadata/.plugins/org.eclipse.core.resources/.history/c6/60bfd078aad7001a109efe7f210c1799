package com.encore.spring.model.Impl;

import java.util.ArrayList;
import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.encore.spring.domain.MyProduct;
import com.encore.spring.model.MyProductDAO;

@Repository
public class MyProductDAOImpl implements MyProductDAO{
	@Autowired
	SqlSession sqlSession;

	@Override
	public int addProduct() {
		int result=sqlSession.insert("addProduct");
		return result;
	}

	@Override
	public ArrayList<MyProduct> findProductByName(String name) {
		return sqlSession.selectList("ProductMapper.findProductByName", name);
	}

	@Override
	public ArrayList<MyProduct> findProducts(MyProduct myProduct) {
		return sqlSession.selectList("ProductMapper.findProducts");	
		}
	
	
}
