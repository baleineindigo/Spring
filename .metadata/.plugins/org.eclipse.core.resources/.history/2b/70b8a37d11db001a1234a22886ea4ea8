<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Insert title here</title>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript">
	$(function() {
		$('#id').on("keyup",function() {
			$.ajax({
				url:"IdcheckServlet.do?id="+$('#id').val(),
				dataType:'json',
				success:function(data){//callback
					$.each(data, function(key,value){
						$("#checkView").html(value);
					});
				}//success
			});//ajax
	});//keyup
	});//function
	
function checkId(){
	if ($("#checkView").text()=="해당 ID를 사용할 수 없음"){
		alert("중복된 아이디 입니다.\n다시 입력해 주세요.");
		$("#id").text()="";
		return false;
		
	}else return true;
};
	
</script>
</head>
<body>
<h3>회원가입</h3>
<!-- register_action에서 하고있는 기능이  RegisterServletd으로 이동
	 register_result.jsp로 결과를 보낸다.
-->
<form action="RGS.do" name="registerForm" onsubmit="return checkId();">
ID : <input type="text" name="id" id="id" required="required">
<span id="checkView" name="checkView">&nbsp;</span><br><br>
PASSWORD : <input type="password" name="password" required="required"><br><br>
NAME : <input type="text" name="name" required="required"><br><br>
ADDRESS : <input type="text" name="address" required="required"><br><br>

<input type="submit" value="member register">
</form>
</body>
</html>























