<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="spring.sql.mapper">
	<insert id="insert" parameterType="phone">
		insert into
		phones(num, model, price, vcode)
		values (#{num}, #{model}, #{price}, #{vcode})
	</insert>
	
	<resultMap type="phone" id="phoneWithCompany">
		<id column="num" property="num"/>
		<result column="model" property="model"/>
		<result column="price" property="price"/>
		<result column="vcode" property="vcode"/>
		<association property="company">
			<id column="vcode" property="vcode"/>
			<result column="vendor" property="vendor"/>
		</association>
	</resultMap>
	
	<!--  Dynamic Query : selectAll+ selectOne-->
	<select id="select" parameterType="list" resultMap="phoneWithCompany">
		select p.num, p.model, p.price,c.vendor
		from phones p
		join company c using(vcode)
		<if test="num!=null">
			where num=#{num}
		</if>
	</select>
	
	<delete id="delete" parameterType="list">
		delete
		from phones
		where num in
		<foreach collection="list" item="num" open="(" close=")" separator=",">
			#{num}
		</foreach>
	</delete>

	<resultMap type="userinfo" id="userRM">
		<result column="userId" property="id"/>
		<result column="password" property="pw"/>
	</resultMap>
	
	<!-- User Dynamic Query -->
	<select id="selectUser" parameterType="userinfo" resultMap="userRM">
		select
		userId, password 
		from user_info
		where userId = #{id}
		<if test="pw!=null">
			and password=#{pw}
		</if>
	</select>
	
	
</mapper>








